<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">

<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
	xmlns:g='urn:import:com.google.gwt.user.client.ui'
	xmlns:imagepreloader="urn:import:com.reveregroup.gwt.imagepreloader.client"
	ui:generateFormat='com.google.gwt.i18n.rebind.format.PropertiesFormat'
	ui:generateKeys='com.google.gwt.i18n.rebind.keygen.MD5KeyGenerator'
	ui:generateLocales='default'>

	<ui:style>
		.zindex {
			z-index: 42;
		}
		.panel {
			border: 1px solid red;
			margin-top: -5px;
		}
		.prevBtn {
			left: auto !important;
			right: 0px !important;
		}
	</ui:style>
	
	<g:PopupPanel modal="true" autoHideEnabled="true" glassEnabled="true" addStyleNames="{style.zindex}">
		<g:HTMLPanel ui:field="pane">
			<imagepreloader:FitImage ui:field="image" />
			<g:LayoutPanel height="40px" addStyleNames="{style.panel}">
				<g:layer left="0px" width="33%">
					<g:Button ui:field="prev" styleName="buttonViewer" addStyleNames="{style.prevBtn}"></g:Button>
				</g:layer>
				<g:layer left="33%" right="33%">
					<g:Label ui:field="countLabel" styleName="globalStyle">Center</g:Label>
				</g:layer>
				<g:layer right="0px" width="33%">
					<g:Button ui:field="next" styleName="buttonViewer"></g:Button>
				</g:layer>
			</g:LayoutPanel>
		</g:HTMLPanel>
	</g:PopupPanel>
</ui:UiBinder>
