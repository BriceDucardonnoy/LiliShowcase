<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">

<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
	xmlns:g='urn:import:com.google.gwt.user.client.ui'
	xmlns:container='urn:import:com.sencha.gxt.widget.core.client.container'
	ui:generateFormat='com.google.gwt.i18n.rebind.format.PropertiesFormat'
	ui:generateKeys='com.google.gwt.i18n.rebind.keygen.MD5KeyGenerator'
	ui:generateLocales='default'>

	<ui:style>
		.globalStyle {
			background: #000000 repeat scroll 0 0;
			background-color: black;
		}
		.globalStyle2 {
			background: #000000 repeat scroll 0 0;
			background-color: black;
			width: 100%;
			height: 100%;
		}
		.autoflow {
			overflow-y: auto;
		}
	</ui:style>
	
	<g:PopupPanel modal="true" autoHideEnabled="true" glassEnabled="true">
		<container:SimpleContainer addStyleNames="{style.autoflow}" ui:field="mainPane">
		<container:child>
			<g:HTMLPanel addStyleNames="{style.globalStyle}" ui:field="pane" />
		</container:child>
		</container:SimpleContainer>
	</g:PopupPanel>
</ui:UiBinder>
