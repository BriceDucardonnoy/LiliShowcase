<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">

<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
	xmlns:g='urn:import:com.google.gwt.user.client.ui'
	xmlns:container="urn:import:com.sencha.gxt.widget.core.client.container"
	xmlns:gxt="urn:import:com.sencha.gxt.widget.core.client"
	xmlns:menu="urn:import:com.sencha.gxt.widget.core.client.menu"
	xmlns:button="urn:import:com.sencha.gxt.widget.core.client.button"
	xmlns:toolbar="urn:import:com.sencha.gxt.widget.core.client.toolbar"
	ui:generateFormat='com.google.gwt.i18n.rebind.format.PropertiesFormat'
	ui:generateKeys='com.google.gwt.i18n.rebind.keygen.MD5KeyGenerator'
	ui:generateLocales='default'>

	<ui:with type="com.sencha.gxt.core.client.util.Margins" field="outerMargins">
		<ui:attributes top="0" right="0" bottom="0" left="0" />
	</ui:with>
	
	<ui:with type="com.sencha.gxt.widget.core.client.container.MarginData" field="outerData">
		<ui:attributes margins="{outerMargins}" />
	</ui:with>
	<ui:with type="com.sencha.gxt.widget.core.client.container.BorderLayoutContainer.BorderLayoutData" field="northData" />
	<ui:with type="com.sencha.gxt.widget.core.client.container.BorderLayoutContainer.BorderLayoutData" field="westData" />
	<ui:with type="com.sencha.gxt.widget.core.client.container.BorderLayoutContainer.BorderLayoutData" field="centerData" />
	<ui:with type="com.sencha.gxt.widget.core.client.container.BorderLayoutContainer.BorderLayoutData" field="eastData" />
	<ui:with type="com.sencha.gxt.widget.core.client.container.BorderLayoutContainer.BorderLayoutData" field="southData" />

	<ui:style>
	   .menuBorder {
	       border-top: none;
	   }
	   .margin {
	      margin: 10px;
	    }
	</ui:style>

	<container:Viewport>
		<container:SimpleContainer borders="false">
			<container:child layoutData="{outerData}">
				<container:BorderLayoutContainer borders="false">
					<!-- NORTH -->
					<container:north layoutData="{northData}">
						<!-- <g:HTMLPanel>
							This is my header<hr/>
						</g:HTMLPanel> -->
						<toolbar:ToolBar>
 
            <!-- <button:TextButton text="Button w/ Menu" icon="{images.menu_show}"> -->
            <button:TextButton text="Button w/ Menu">
              <button:menu>
                <menu:Menu ui:field="menu1">
                  <!-- <form:ComboBox name="name" forceSelection="true" triggerAction="ALL" /> -->
                  <menu:CheckMenuItem text="I Like Cats" checked="true" />
                  <menu:CheckMenuItem text="I Like Dogs" />
                  <menu:SeparatorMenuItem />
                  <menu:MenuItem text="Radio Options">
                    <menu:submenu>
                      <menu:Menu>
                        <menu:CheckMenuItem text="Blue Theme" group="radios" checked="true" />
                        <menu:CheckMenuItem text="Gray Theme" group="radios" />
                      </menu:Menu>
                    </menu:submenu>
                  </menu:MenuItem>
                  <!-- <menu:MenuItem text="Choose a Date" icon="{images.calendar}"> -->
                  <menu:MenuItem text="Choose a Date">
                    <menu:submenu>
                      <menu:DateMenu ui:field="dateMenu" />
                    </menu:submenu>
                  </menu:MenuItem>
                  <menu:MenuItem text="Choose a Color">
                    <menu:submenu>
                      <menu:ColorMenu ui:field="colorMenu" />
                    </menu:submenu>
                  </menu:MenuItem>
                </menu:Menu>
              </button:menu>
            </button:TextButton>
 
            <toolbar:SeparatorToolItem />
 
            <!-- <button:SplitButton text="Split Button" icon="{images.list_items}"> -->
            <button:SplitButton text="Split Button">
              <button:menu>
                <menu:Menu ui:field="splitButtonMenu">
                  <!-- <menu:MenuItem HTML="<b>Bold</b>" />
                  <menu:MenuItem HTML="<i>Italic</i>" />
                  <menu:MenuItem HTML="<u>Underline</u>" /> -->
                  <menu:MenuItem HTML="Bold" />
                  <menu:MenuItem HTML="Italic" />
                  <menu:MenuItem HTML="Underline" />
                </menu:Menu>
              </button:menu>
            </button:SplitButton>
 
            <toolbar:SeparatorToolItem />
 
            <button:ToggleButton text="Toggle" value="true" />
 
            <toolbar:SeparatorToolItem />
 
            <button:TextButton text="Scrolling Menu">
              <button:menu>
                <menu:Menu ui:field="scrollMenu" maxHeight="200" />
              </button:menu>
            </button:TextButton>
 
            <toolbar:SeparatorToolItem />
 
            <toolbar:FillToolItem />
 
          </toolbar:ToolBar>
					</container:north>
					<!-- Center -->
					<container:center layoutData="{centerData}">
						<gxt:ContentPanel headerVisible="false" ui:field="mainCenterPane">
						</gxt:ContentPanel>
					</container:center>
					<!-- SOUTH -->
					<!-- <container:south layoutData="{southData}">
						<g:HTMLPanel>
							<h1>This is my footer</h1>
							<hr/>
						</g:HTMLPanel>
					</container:south> -->
				</container:BorderLayoutContainer>
			</container:child>
		</container:SimpleContainer>
	</container:Viewport>
	
</ui:UiBinder>
